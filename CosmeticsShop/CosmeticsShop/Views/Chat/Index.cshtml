@model List<CosmeticsShop.Models.Message>
@{
    ViewBag.Title = "Chat với KH";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1><i class="fas fa-comments"></i> Chat với khách hàng</h1>
</section>

<section class="content">
    <div class="card">
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Tên khách hàng</th>
                        <th>Tin nhắn</th>
                        <th>Thời gian</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.User.Name</td>
                            <td>@item.Content</td>
                            <td>@item.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a href="@Url.Action("Chating", "Chat", new { WithUserID = item.FromUserID })" class="btn btn-primary btn-sm">
                                    Xem
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
