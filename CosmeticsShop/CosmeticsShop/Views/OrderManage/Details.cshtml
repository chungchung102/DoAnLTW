@model List<CosmeticsShop.Models.OrderDetail>
@{
    ViewBag.Title = "Đơn đặt hàng: " + Request.Params["ID"];
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    decimal totalAmount = 0;
    if (Model != null)
    {
        foreach (var item in Model)
        {
            decimal price = item.ProductPrice ?? 0;
            int quantity = item.Quantity ?? 0;

            totalAmount += price * quantity;
        }
    }
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-3 align-items-center">
            <div class="col-sm-6">
                <h1 class="m-0">Chi tiết đơn đặt hàng: @Request.Params["ID"]</h1>
            </div>
            <div class="col-sm-6 text-end">
                <!-- Bỏ nút quay lại ở đây -->
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card shadow-sm">
            <div class="card-body p-3 table-responsive">
                <table class="table table-hover table-bordered align-middle text-center mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-start">@item.ProductName</td>
                                    <td>
                                        <img src="~/Content/images/@item.ProductImage" alt="@item.ProductName" style="width:120px; height:160px; object-fit:cover; border-radius:4px;" />
                                    </td>
                                    <td>@((item.ProductPrice ?? 0).ToString("N0")) đ</td>
                                    <td>@(item.Quantity ?? 0)</td>
                                    <td class="text-danger fw-bold">
                                        @(((item.ProductPrice ?? 0) * (item.Quantity ?? 0)).ToString("N0")) đ
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-muted text-center fst-italic">Không có sản phẩm nào...</td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (Model != null && Model.Count > 0)
                {
                    <div class="mt-4 text-end fs-5">
                        <span>Tổng số tiền:</span>
                        <strong class="text-danger">@totalAmount.ToString("N0") đ</strong>
                    </div>
                }

                <div class="d-flex justify-content-between mt-3">
                    <a href="/OrderManage/Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>

                    @if (!ViewBag.IsProcessed)
                    {
                        <a href="/OrderManage/Processed/@Request.Params["ID"]" class="btn btn-primary">
                            <i class="fas fa-check me-1"></i> Duyệt
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
