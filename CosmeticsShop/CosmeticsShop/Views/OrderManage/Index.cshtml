@model List<CosmeticsShop.Models.Order>
@{
    ViewBag.Title = "Quản lý đơn đặt hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2 align-items-center">
            <div class="col-12">
                <h3 class="fw-bold text-primary mb-0">
                    <i class="fas fa-shopping-cart"></i> Quản lý đơn đặt hàng
                </h3>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header p-0 pt-1">
                <ul class="nav nav-tabs" id="orderTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="tab-processing" data-toggle="tab" href="#processing" role="tab" aria-controls="processing" aria-selected="true">
                            Chưa duyệt
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tab-processed" data-toggle="tab" href="#processed" role="tab" aria-controls="processed" aria-selected="false">
                            Đã duyệt
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tab-delivering" data-toggle="tab" href="#delivering" role="tab" aria-controls="delivering" aria-selected="false">
                            Đang giao
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="tab-complete" data-toggle="tab" href="#complete" role="tab" aria-controls="complete" aria-selected="false">
                            Hoàn thành
                        </a>
                    </li>
                </ul>
            </div>

            <div class="card-body p-0">
                <div class="tab-content" id="orderTabsContent">

                    <!-- Chưa duyệt -->
                    <div class="tab-pane fade show active" id="processing" role="tabpanel" aria-labelledby="tab-processing">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle text-center mb-4">
                                <thead class="thead-primary">
                                    <tr>
                                        <th style="width: 100px;">Mã đơn hàng</th>
                                        <th>Ngày đặt</th>
                                        <th style="width: 140px;">Thanh toán</th>
                                        <th style="width: 140px;">Trạng thái</th>
                                        <th style="width: 120px;">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any(x => x.Status == "Processing"))
                                    {
                                        foreach (var item in Model.Where(x => x.Status == "Processing"))
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@(item.DateOrder.HasValue ? item.DateOrder.Value.ToString("dd/MM/yyyy") : "")</td>
                                                <td>
                                                    @if (item.IsPaid == true)
                                                    {
                                                        <span class="badge badge-success"><i class="fas fa-check-circle me-1"></i>Đã thanh toán</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-warning text-dark"><i class="fas fa-clock me-1"></i>Chưa thanh toán</span>
                                                    }
                                                </td>
                                                <td><span class="badge badge-warning"><i class="fas fa-hourglass-start me-1"></i>Chưa duyệt</span></td>
                                                <td>
                                                    <div class="d-flex justify-content-center">
                                                        <a href="/OrderManage/Details/?ID=@item.ID"
                                                           class="btn btn-outline-primary border-2 btn-sm"
                                                           title="Chi tiết"
                                                           style="min-width: 100px;">
                                                            <i class="fas fa-info-circle"></i> Chi tiết
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-muted py-3">Không có đơn hàng chưa duyệt...</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Đã duyệt -->
                    <div class="tab-pane fade" id="processed" role="tabpanel" aria-labelledby="tab-processed">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle text-center mb-4">
                                <thead class="thead-primary">
                                    <tr>
                                        <th style="width: 100px;">Mã đơn hàng</th>
                                        <th>Ngày đặt</th>
                                        <th>Ngày nhận dự kiến</th>
                                        <th style="width: 140px;">Thanh toán</th>
                                        <th style="width: 140px;">Trạng thái</th>
                                        <th style="width: 140px;">Tình trạng giao hàng</th>
                                        <th style="width: 160px;">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any(x => x.Status == "Processed"))
                                    {
                                        foreach (var item in Model.Where(x => x.Status == "Processed"))
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@(item.DateOrder.HasValue ? item.DateOrder.Value.ToString("dd/MM/yyyy") : "")</td>
                                                <td>@(item.DateShip.HasValue ? item.DateShip.Value.ToString("dd/MM/yyyy") : "")</td>
                                                <td>
                                                    @if (item.IsPaid == true)
                                                    {
                                                        <span class="badge badge-success"><i class="fas fa-check-circle me-1"></i>Đã thanh toán</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-warning text-dark"><i class="fas fa-clock me-1"></i>Chưa thanh toán</span>
                                                    }
                                                </td>
                                                <td><span class="badge badge-success"><i class="fas fa-check me-1"></i>Đã duyệt</span></td>
                                                <td><span class="badge badge-warning text-dark"><i class="fas fa-truck me-1"></i>Chưa giao</span></td>
                                                <td>
                                                    <div class="d-flex justify-content-center gap-2">
                                                        <a href="/OrderManage/Details/?ID=@item.ID"
                                                           class="btn btn-outline-primary border-2 btn-sm"
                                                           title="Chi tiết"
                                                           style="min-width: 100px;">
                                                            <i class="fas fa-info-circle"></i> Chi tiết
                                                        </a>
                                                        <a href="/OrderManage/Delivering/?ID=@item.ID"
                                                           class="btn btn-primary border-2 btn-sm"
                                                           title="Giao hàng"
                                                           style="min-width: 100px;">
                                                            <i class="fas fa-truck"></i> Giao hàng
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-muted py-3">Không có đơn hàng đã duyệt...</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Đang giao -->
                    <div class="tab-pane fade" id="delivering" role="tabpanel" aria-labelledby="tab-delivering">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle text-center mb-4">
                                <thead class="thead-primary">
                                    <tr>
                                        <th style="width: 100px;">Mã đơn hàng</th>
                                        <th>Ngày đặt</th>
                                        <th>Ngày nhận dự kiến</th>
                                        <th style="width: 140px;">Thanh toán</th>
                                        <th style="width: 140px;">Tình trạng giao hàng</th>
                                        <th style="width: 120px;">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any(x => x.Status == "Delivering"))
                                    {
                                        foreach (var item in Model.Where(x => x.Status == "Delivering"))
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@(item.DateOrder.HasValue ? item.DateOrder.Value.ToString("dd/MM/yyyy") : "")</td>
                                                <td>@(item.DateShip.HasValue ? item.DateShip.Value.ToString("dd/MM/yyyy") : "")</td>
                                                <td>
                                                    @if (item.IsPaid == true)
                                                    {
                                                        <span class="badge badge-success"><i class="fas fa-check-circle me-1"></i>Đã thanh toán</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-warning text-dark"><i class="fas fa-clock me-1"></i>Chưa thanh toán</span>
                                                    }
                                                </td>
                                                <td><span class="badge badge-info"><i class="fas fa-shipping-fast me-1"></i>Đang giao</span></td>
                                                <td>
                                                    <div class="d-flex justify-content-center">
                                                        <a href="/OrderManage/Details/?ID=@item.ID"
                                                           class="btn btn-outline-primary border-2 btn-sm"
                                                           title="Chi tiết"
                                                           style="min-width: 100px;">
                                                            <i class="fas fa-info-circle"></i> Chi tiết
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="6" class="text-muted py-3">Chưa có đơn hàng đang giao...</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Hoàn thành -->
                    <div class="tab-pane fade" id="complete" role="tabpanel" aria-labelledby="tab-complete">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover align-middle text-center mb-4">
                                <thead class="thead-primary">
                                    <tr>
                                        <th style="width: 100px;">Mã đơn hàng</th>
                                        <th>Ngày đặt</th>
                                        <th>Ngày nhận</th>
                                        <th style="width: 140px;">Trạng thái</th>
                                        <th style="width: 120px;">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any(x => x.Status == "Complete"))
                                    {
                                        foreach (var item in Model.Where(x => x.Status == "Complete"))
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@(item.DateOrder.HasValue ? item.DateOrder.Value.ToString("dd/MM/yyyy") : "")</td>
                                                <td>@(item.DateShip.HasValue ? item.DateShip.Value.ToString("dd/MM/yyyy") : "")</td>
                                                <td><span class="badge badge-success"><i class="fas fa-check-double me-1"></i>Hoàn thành</span></td>
                                                <td>
                                                    <div class="d-flex justify-content-center">
                                                        <a href="/OrderManage/Details/?ID=@item.ID"
                                                           class="btn btn-outline-primary border-2 btn-sm"
                                                           title="Chi tiết"
                                                           style="min-width: 100px;">
                                                            <i class="fas fa-info-circle"></i> Chi tiết
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-muted py-3">Chưa có đơn hàng hoàn thành...</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
