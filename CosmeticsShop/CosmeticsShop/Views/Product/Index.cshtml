@{
    ViewBag.Title = ViewBag.NamePage;
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

    List<CosmeticsShop.Models.Category> categories = ViewBag.ListCategory as List<CosmeticsShop.Models.Category>;
    List<CosmeticsShop.Models.Product> products = ViewBag.ListProduct as List<CosmeticsShop.Models.Product>;
}

<style>
    /* Thanh danh mục dạng navbar */
    .category-navbar {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 10px 15px;
        margin-bottom: 25px;
        display: flex;
        gap: 15px;
        overflow-x: auto;
    }

        .category-navbar a {
            color: #6f4e7c;
            font-weight: 600;
            text-decoration: none;
            padding: 8px 15px;
            border-radius: 20px;
            transition: background 0.3s;
            white-space: nowrap;
        }

            .category-navbar a:hover {
                background-color: #e9d8f4;
            }

    /* Card sản phẩm */
    .product-card {
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 100%;
        background: #fff;
        transition: transform 0.2s;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }

        .product-card img {
            height: 230px;
            object-fit: cover;
            width: 100%;
        }

    .product-card-body {
        padding: 15px;
        flex-grow: 1;
    }

        .product-card-body h4 {
            font-size: 16px;
            font-weight: 600;
            color: #6f4e7c;
            min-height: 48px;
        }

        .product-card-body p {
            margin: 0;
        }

    .price-tag {
        color: #d98fb3;
        font-weight: 700;
        font-size: 18px;
        margin-bottom: 8px;
    }

    .product-card-footer {
        padding: 15px;
    }

    .btn-buy {
        background-color: #a46f8e;
        border: none;
        color: white;
        padding: 8px;
        border-radius: 5px;
        width: 100%;
        text-align: center;
        display: block;
        text-decoration: none;
        transition: background 0.3s;
    }

        .btn-buy:hover {
            background-color: #8c5e78;
        }
</style>

<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="/"><span class="glyphicon glyphicon-home"></span> Trang chủ</a></li>
            <li class="active">@ViewBag.NamePage</li>
        </ol>
    </div>
</div>

<div class="container" style="margin-top: 30px;">

    <!-- Thanh danh mục -->
    <div class="category-navbar">
        @foreach (var item in categories)
        {
            <a href="/Product/Index?CategoryID=@item.ID">@item.Name</a>
        }
    </div>

    <!-- Danh sách sản phẩm -->
    <div class="row">
        @if (products != null && products.Count > 0)
        {
            foreach (var product in products)
            {
                <div class="col-sm-6 col-md-4" style="margin-bottom: 20px;">
                    <div class="product-card">
                        <a href="/Product/Details/@product.ID">
                            <img src="~/Content/images/@product.Image1" alt="@product.Name" />
                        </a>
                        <div class="product-card-body">
                            <h4>
                                <a href="/Product/Details/@product.ID" style="color: inherit; text-decoration: none;">
                                    @product.Name
                                </a>
                            </h4>
                            <p class="price-tag">@product.Price.Value.ToString("#,##0")₫</p>
                            <p style="font-size: 13px; color: #777;">
                                Đã bán: @product.PurchasedCount <br />
                                Còn lại: @product.Quantity
                            </p>
                        </div>
                        <div class="product-card-footer">
                            <a href="/Product/Details/@product.ID" class="btn-buy">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-xs-12">
                <h3 class="text-center text-muted">Không có sản phẩm nào...</h3>
            </div>
        }
    </div>
</div>
