@{
    ViewBag.Title = "Thêm mới sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    List<CosmeticsShop.Models.Category> categories = ViewBag.CategoryList as List<CosmeticsShop.Models.Category>;
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2 align-items-center">
            <div class="col-sm-6">
                <h1 class="m-0">Thêm mới sản phẩm</h1>
            </div>
            <div class="col-sm-6 text-sm-end">
                @* Nếu muốn thêm nút hay breadcrumb có thể đặt ở đây *@
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card card-primary shadow-sm">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin sản phẩm</h3>
                    </div>
                    @using (Html.BeginForm("Add", "ProductManage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="card-body">

                            <div class="mb-3">
                                <label for="Name" class="form-label fw-semibold">Tên sản phẩm <span class="text-danger">*</span></label>
                                <input type="text" id="Name" name="Name" class="form-control" required maxlength="200" placeholder="Nhập tên sản phẩm" />
                            </div>

                            <div class="mb-3">
                                <label for="CategoryID" class="form-label fw-semibold">Danh mục <span class="text-danger">*</span></label>
                                <select id="CategoryID" name="CategoryID" class="form-select" required>
                                    <option value="">-- Chọn danh mục --</option>
                                    @foreach (var item in categories)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="Price" class="form-label fw-semibold">Đơn giá (VNĐ) <span class="text-danger">*</span></label>
                                <input type="number" id="Price" name="Price" class="form-control" required min="0" step="1000" placeholder="Nhập đơn giá" />
                            </div>

                            <div class="mb-3">
                                <label for="Quantity" class="form-label fw-semibold">Số lượng <span class="text-danger">*</span></label>
                                <input type="number" id="Quantity" name="Quantity" class="form-control" required min="0" step="1" placeholder="Nhập số lượng" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Hình ảnh sản phẩm</label>
                                <div class="row g-3">
                                    <div class="col-md-4 text-center">
                                        <label for="ImageUpload1" class="form-label d-block">Hình 1 <span class="text-danger">*</span></label>
                                        <input type="file" id="ImageUpload1" name="ImageUpload" class="form-control" accept="image/*" required />
                                    </div>
                                    <div class="col-md-4 text-center">
                                        <label for="ImageUpload2" class="form-label d-block">Hình 2</label>
                                        <input type="file" id="ImageUpload2" name="ImageUpload" class="form-control" accept="image/*" />
                                    </div>
                                    <div class="col-md-4 text-center">
                                        <label for="ImageUpload3" class="form-label d-block">Hình 3</label>
                                        <input type="file" id="ImageUpload3" name="ImageUpload" class="form-control" accept="image/*" />
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="Description" class="form-label fw-semibold">Mô tả <span class="text-danger">*</span></label>
                                <textarea id="Description" name="Description" class="form-control" rows="5" required placeholder="Nhập mô tả sản phẩm"></textarea>
                            </div>

                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="/ProductManage/" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Trở lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Lưu
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
