@model CosmeticsShop.Models.Product
@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    List<CosmeticsShop.Models.Category> categories = ViewBag.CategoryList as List<CosmeticsShop.Models.Category>;
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2 align-items-center">
            <div class="col-sm-6">
                <h1 class="m-0">Chỉnh sửa sản phẩm</h1>
            </div>
            <div class="col-sm-6 text-sm-end">
                @* Có thể thêm breadcrumb hoặc nút khác nếu cần *@
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card card-primary shadow-sm">
                    <div class="card-header">
                        <h3 class="card-title">@Model.Name</h3>
                    </div>
                    @using (Html.BeginForm("Edit", "ProductManage", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <input type="hidden" name="ID" value="@Model.ID" />
                        <div class="card-body">

                            @if (!string.IsNullOrEmpty(ViewBag.Message))
                            {
                                <div class="alert alert-success">
                                    @ViewBag.Message
                                </div>
                            }

                            <div class="mb-3">
                                <label for="Name" class="form-label fw-semibold">Tên sản phẩm</label>
                                <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" required maxlength="200" placeholder="Nhập tên sản phẩm" />
                            </div>

                            <div class="mb-3">
                                <label for="CategoryID" class="form-label fw-semibold">Danh mục</label>
                                <select id="CategoryID" name="CategoryID" class="form-select" required>
                                    <option value="">-- Chọn danh mục --</option>
                                    @foreach (var item in categories)
                                    {
                                        <option value="@item.ID" @(item.ID == Model.CategoryID ? "selected" : "")>@item.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="Price" class="form-label fw-semibold">Đơn giá (VNĐ)</label>
                                <input type="number" id="Price" name="Price" class="form-control"
                                       value="@Model.Price.GetValueOrDefault()" required min="0" step="1000" placeholder="Nhập đơn giá" />
                            </div>

                            <div class="mb-3">
                                <label for="Quantity" class="form-label fw-semibold">Số lượng</label>
                                <input type="number" id="Quantity" name="Quantity" class="form-control"
                                       value="@Model.Quantity" required min="0" step="1" placeholder="Nhập số lượng" />
                            </div>

                            <div class="mb-3">
                                <label for="ViewCount" class="form-label fw-semibold">Lượt xem</label>
                                <input type="number" id="ViewCount" class="form-control" value="@Model.ViewCount" disabled />
                            </div>

                            <div class="mb-3">
                                <label for="PurchasedCount" class="form-label fw-semibold">Đã bán</label>
                                <input type="number" id="PurchasedCount" class="form-control" value="@Model.PurchasedCount" disabled />
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Hình ảnh sản phẩm</label>
                                <div class="row g-3">
                                    <div class="col-md-4 text-center">
                                        <label for="ImageUpload1" class="form-label d-block">Hình 1</label>
                                        <img src="~/Content/images/@Model.Image1" alt="Hình 1" class="img-fluid rounded border" style="height: 300px; object-fit: cover; width: 100%;" />
                                        <input type="file" id="ImageUpload1" name="ImageUpload" class="form-control mt-2" accept="image/*" />
                                    </div>
                                    <div class="col-md-4 text-center">
                                        <label for="ImageUpload2" class="form-label d-block">Hình 2</label>
                                        <img src="~/Content/images/@Model.Image2" alt="Hình 2" class="img-fluid rounded border" style="height: 300px; object-fit: cover; width: 100%;" />
                                        <input type="file" id="ImageUpload2" name="ImageUpload" class="form-control mt-2" accept="image/*" />
                                    </div>
                                    <div class="col-md-4 text-center">
                                        <label for="ImageUpload3" class="form-label d-block">Hình 3</label>
                                        <img src="~/Content/images/@Model.Image3" alt="Hình 3" class="img-fluid rounded border" style="height: 300px; object-fit: cover; width: 100%;" />
                                        <input type="file" id="ImageUpload3" name="ImageUpload" class="form-control mt-2" accept="image/*" />
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="Description" class="form-label fw-semibold">Mô tả</label>
                                <textarea id="Description" name="Description" class="form-control" rows="5" required placeholder="Nhập mô tả sản phẩm">@Model.Description</textarea>
                            </div>

                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="/ProductManage/" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Trở lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Lưu
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
