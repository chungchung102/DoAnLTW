@model List<CosmeticsShop.Models.Order>
@{
    ViewBag.Title = "Quản lý đơn đặt hàng";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    .table th, .table td {
        color: #000 !important;
        vertical-align: middle !important;
        text-align: center;
    }

    .table-centered {
        margin: 0 auto;
        width: 95%;
    }

    .status-cell {
        font-weight: bold;
        color: #d9534f; /* màu đỏ nổi bật cho trạng thái */
    }

    .nav-tabs {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

        .nav-tabs li {
            float: none;
        }
</style>

<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1">
            <li><a href="/"><span class="glyphicon glyphicon-home"></span>Trang chủ</a></li>
            <li class="active">Đơn đặt hàng</li>
        </ol>
    </div>
</div>

<!-- Main Content -->
<div class="products">
    <div class="container">
        <h2 class="text-center mb-4 font-weight-bold">Đơn đặt hàng của tôi</h2>

        <ul class="nav nav-tabs" role="tablist" style="font-weight:bold;">
            <li class="active"><a href="#processing" role="tab" data-toggle="tab">Chưa duyệt</a></li>
            <li><a href="#processed" role="tab" data-toggle="tab">Đã duyệt</a></li>
            <li><a href="#delivering" role="tab" data-toggle="tab">Đang giao</a></li>
            <li><a href="#complete" role="tab" data-toggle="tab">Hoàn thành</a></li>
        </ul>

        <div class="tab-content" style="font-weight:bold;">

            <!-- Chưa duyệt -->
            <div class="tab-pane fade in active" id="processing">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-centered">
                        <thead class="thead-dark">
                            <tr>
                                <th>STT</th>
                                <th>Mã đơn hàng</th>
                                <th>Ngày đặt</th>
                                <th>Thanh toán</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                                var processingOrders = Model?.Where(x => x.Status == "Processing").ToList();
                            }
                            @if (processingOrders != null && processingOrders.Count > 0)
                            {
                                foreach (var item in processingOrders)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.ID</td>
                                        <td>@(item.DateOrder?.ToString("dd/MM/yyyy") ?? "-")</td>
                                        <td>@(item.IsPaid == true ? "Đã thanh toán" : "Chưa thanh toán")</td>
                                        <td class="status-cell">Chưa duyệt</td>
                                        <td><a href="/User/OrderDetails/?ID=@item.ID">Chi tiết</a></td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">Không có đơn hàng chưa duyệt...</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Đã duyệt -->
            <div class="tab-pane fade" id="processed">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-centered">
                        <thead class="thead-dark">
                            <tr>
                                <th>STT</th>
                                <th>Mã đơn hàng</th>
                                <th>Ngày đặt</th>
                                <th>Ngày nhận (dự kiến)</th>
                                <th>Thanh toán</th>
                                <th>Trạng thái</th>
                                <th>Tình trạng giao hàng</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                index = 1;
                                var processedOrders = Model?.Where(x => x.Status == "Processed").ToList();
                            }
                            @if (processedOrders != null && processedOrders.Count > 0)
                            {
                                foreach (var item in processedOrders)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.ID</td>
                                        <td>@(item.DateOrder?.ToString("dd/MM/yyyy") ?? "-")</td>
                                        <td>@(item.DateShip?.ToString("dd/MM/yyyy") ?? "-")</td>
                                        <td>@(item.IsPaid == true ? "Đã thanh toán" : "Chưa thanh toán")</td>
                                        <td class="status-cell">Đã duyệt</td>
                                        <td>Chưa giao</td>
                                        <td><a href="/User/OrderDetails/?ID=@item.ID">Chi tiết</a></td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8">Không có đơn hàng đã duyệt...</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Đang giao -->
            <div class="tab-pane fade" id="delivering">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-centered">
                        <thead class="thead-dark">
                            <tr>
                                <th>STT</th>
                                <th>Mã đơn hàng</th>
                                <th>Ngày đặt</th>
                                <th>Ngày nhận (dự kiến)</th>
                                <th>Thanh toán</th>
                                <th>Tình trạng giao hàng</th>
                                <th>Thao tác</th>
                                <th>Nhận hàng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                index = 1;
                                var deliveringOrders = Model?.Where(x => x.Status == "Delivering").ToList();
                            }
                            @if (deliveringOrders != null && deliveringOrders.Count > 0)
                            {
                                foreach (var item in deliveringOrders)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.ID</td>
                                        <td>@(item.DateOrder?.ToString("dd/MM/yyyy") ?? "-")</td>
                                        <td>@(item.DateShip?.ToString("dd/MM/yyyy") ?? "-")</td>
                                        <td>@(item.IsPaid == true ? "Đã thanh toán" : "Chưa thanh toán")</td>
                                        <td class="status-cell">Đang giao</td>
                                        <td><a href="/User/OrderDetails/?ID=@item.ID">Chi tiết</a></td>
                                        <td>
                                            <form method="post" action="/User/Complete/@item.ID">
                                                <button type="submit" class="btn btn-success btn-sm">Nhận hàng</button>
                                            </form>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8">Chưa có đơn hàng đang giao...</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Hoàn thành -->
            <div class="tab-pane fade" id="complete">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-centered">
                        <thead class="thead-dark">
                            <tr>
                                <th>STT</th>
                                <th>Mã đơn hàng</th>
                                <th>Ngày đặt</th>
                                <th>Ngày nhận</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                index = 1;
                                var completeOrders = Model?.Where(x => x.Status == "Complete").ToList();
                            }
                            @if (completeOrders != null && completeOrders.Count > 0)
                            {
                                foreach (var item in completeOrders)
                                {
                                    <tr>
                                        <td>@index</td>
                                        <td>@item.ID</td>
                                        <td>@(item.DateOrder?.ToString("dd/MM/yyyy") ?? "-")</td>
                                        <td>@(item.DateShip?.ToString("dd/MM/yyyy") ?? "-")</td>
                                        <td class="status-cell">Hoàn thành</td>
                                        <td><a href="/User/OrderDetails/?ID=@item.ID">Chi tiết</a></td>
                                    </tr>
                                    index++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">Chưa có đơn hàng hoàn thành...</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div> <!-- End Tab Content -->
    </div>
</div>

<script>
    $(function () {
        $('.nav-tabs a').on('click', function (e) {
            e.preventDefault();
            $(this).tab('show');
        });
    });
</script>
